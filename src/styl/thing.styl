// Interactive-specific css here

#interactive-content
	max-width 940px
	margin 0 auto
	

section
	margin 0 auto 1em auto
	background-color #eee
	h2
		text-align center
		
	.item
		width 45%
		max-width 320px
		margin-top 1em
		margin-left 5%
		
		&:nth-child(2n)
			margin-left 55%
		
		
		h3, h4
			margin 0
			padding 0
			&::before
				font-size 9px
				text-transform uppercase
				letter-spacing 0.1em
				display block
				font-family $qz-sans
		h3
			&::before
				content "problem"
				
		h4
			margin-top 0.2em
			&::before
				content "what you can do"
		
		p
			font-size 12px
			line-height 1.4
		
.marker
	border 1px $qz-gray-1 solid
	max-width 200px
	margin 0 auto
	
	p
		width auto
		text-align center
